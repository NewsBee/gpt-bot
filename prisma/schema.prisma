model UserSubscription {
  id                 String   @id @default(cuid())
  userId             String   @unique
  midtransOrderId    String?
  midtransTransactionId String?
  subscriptionStatus String?
  price              Float?
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
}